[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #55
primary = #0a6cf5
primary-alt = #9f78e1
secondary = #ffb52a
secondary-alt = #e60053
info = #7aa3db
info-alt = #7aa3db
notice = #f3f99d
notice-alt = #f3f99d
warning = #ffb52a
warning-alt = #e60053
alert = #bd2c40
alert-alt = #bd2c40


[global/wm]
margin-top = 0
margin-bottom = 0

[settings]
; The throttle settings lets the eventloop swallow up til X events
; if they happen within Y millisecond after first event was received.
; This is done to prevent flood of update event.
;
; For example if 5 modules emit an update event at the same time, we really
; just care about the last one. But if we wait too long for events to swallow
; the bar would appear sluggish so we continue if timeout
; expires or limit is reached.
throttle-output = 5
throttle-output-for = 10

; Time in milliseconds that the input handler will wait between processing events
throttle-input-for = 30

; Reload upon receiving XCB_RANDR_SCREEN_CHANGE_NOTIFY events
screenchange-reload = true

enable-ipc = true

[bar/top]
monitor = ${env:MONITOR}
monitor-strict = true
top = true
width = 100%
height = 14

background = ${colors.background}
foreground = ${colors.foreground}

spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1

modules-left = i3 xwindow
modules-right = date

font-0 = xos4 Terminus:pixelsize=12;1
font-1 = FontAwesome:pixelsize=10;2
font-2 = unifont:size=10;2
;font-3 = siji:pixelsize=12;2

[bar/main]
monitor = ${env:MONITOR}
monitor-strict = false
bottom = true
width = 100%
height = 20

background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 1
;overline-color = #00f
;overline-size = 0
;overline-color = #00f

border-top-size = 1
border-top-color = ${colors.background-alt}

spacing = 0
padding-left = 0
padding-right = 0
module-margin-left = 1
module-margin-right = 1

font-0 = xos4 Terminus:pixelsize=14;1
font-1 = FontAwesome:pixelsize=12;2
font-2 = unifont:size=10;2
;font-3 = siji:pixelsize=12;2

modules-left = i3 xwindow
modules-center =
modules-right = filesystem-slash filesystem-home wlan cpu memory volume temperature battery date

tray-position = right
tray-padding = 0

[module/xwindow]
type = internal/xwindow
format = <label>
format-prefix = ""
format-prefix-foreground = ${colors.foreground-alt}

label = " %title:0:60:...%"

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

;format-overline = ${colors.secondary}
;format-prefix = " "
;format-prefix-foreground = ${colors.foreground-alt}

label-layout = %layout%

label-indicator-padding = 2
label-indicator-background = ${colors.secondary}
;label-indicator-overline = ${colors.secondary}

[module/filesystem-home]
type = internal/fs
interval = 25

mount-0 = /home
label-mounted = "%{F#5b5b5b}%{F-} %percentage_used:2%%"

[module/filesystem-slash]
type = internal/fs
interval = 25

mount-0 = /
label-mounted = "%{F#5b5b5b}%{F-} %percentage_used:2%%"

;label-unmounted = %mountpoint%: not mounted
;label-unmounted-foreground = ${colors.foreground-alt}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
strip-wsnumbers = true
pin-workspaces = true

label-mode = %mode%
label-mode-foreground = ${colors.alert-alt}

label-state-padding = 1

label-focused = %name%
label-focused-background = ${colors.background-alt}
label-focused-overline-size = 2
label-focused-overline = ${colors.primary}
label-focused-foreground = ${colors.foreground}
label-focused-padding = 1

label-unfocused = %name%
label-unfocused-padding = 1
label-unfocused-foreground = ${colors.foreground-alt}

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-foreground = ${colors.alert}
label-urgent-overline = ${colors.alert}
label-urgent-padding = 1

label-visible = %name%
label-visible-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 1

;ws-icon-0 = 1;
;ws-icon-1 = 2;
;ws-icon-2 = 3;
;ws-icon-3 = 4;
;ws-icon-4 = 5;
;ws-icon-5 = 6;
;ws-icon-6 = 7;
;ws-icon-7 = 8;
;ws-icon-8 = 9;
;ws-icon-9 = 10;

[module/cpu]
type = internal/cpu
interval = 3
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = " %percentage:2%%"

[module/memory]
type = internal/memory
interval = 3
format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
label = %gb_used:3%/%gb_total:3%

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = ${colors.foreground-alt}

; format-connected-overline = 
;format-disconnected-overline = ${self.format-connected-overline}

label-connected = "%essid% (%local_ip%)"
;label-connected = "%essid% (%local_ip%) %downspeed:9%/%upspeed:9%"
label-disconnected = "  down"
label-disconnected-foreground = #5b

ramp-signal-0 = .
ramp-signal-1 = .
ramp-signal-2 = :
ramp-signal-3 = :
ramp-signal-4 = ⡆
ramp-signal-foreground = ${colors.foreground-alt}
ramp-signal-0-foreground = ${colors.foreground}
ramp-signal-1-foreground = ${colors.info}
ramp-signal-2-foreground = ${colors.notice}
ramp-signal-3-foreground = ${colors.warning}
ramp-signal-4-foreground = ${colors.alert}

[module/tun]
type = internal/network
interface = tun0
interval = 3.0

format-connected = <label-connected>
format-disconnected = <label-disconnected>

label-connected = VPN: (%local_ip%)
format-connected-foreground = ${colors.foreground}

label-disconnected = VPN down
label-disconnected-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface = eth0
interval = 3.0

;format-connected-overline = #55aa55
format-connected-prefix = " "
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

;format-disconnected-overline = ${self.format-connected-overline}
label-disconnected = %ifname%
label-disconnected-foreground = ${colors.foreground-alt}

[module/date]
type = internal/date
interval = 1
date = "%d%{F#92}%m%{F-}%{F#49}%y%{F-}"
date-alt = " %d"
time = "%H%{F#92}%M%{F-}%{F#49}%S%{F-}"
time-alt =  %H:%M
format-prefix-foreground = ${colors.foreground-alt}
;format-overline = #0a6cf5
label = %date% %time%

[module/volume]
type = internal/volume
format-volume = <ramp-volume> <label-volume>
; Available tokens: %percentage% (default)
format-muted-prefix = ""
label-muted = " muted"
format-muted-foreground = ${colors.foreground-alt}

; Only applies if <ramp-volume> is used
ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""
ramp-volume-0-foreground = ${colors.foreground-alt}
ramp-volume-1-foreground = ${colors.warning}
ramp-volume-2-foreground = ${colors.alert-alt}

label-volume-1-foreground = ${colors.foreground-alt}

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP1
full-at = 95
time-format = "%H%{F#92}%M%{F-}"

label-full = %percentage%%

label-charging = %percentage%% %time%
label-discharging = %percentage%% %time%

format-charging = <animation-charging> <label-charging>
;format-charging-overline = #f3f99d

format-discharging = <ramp-capacity> <label-discharging>
;format-discharging-overline = ${self.format-charging-overline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.foreground-alt}
;format-full-overline = ${self.format-charging-overline}

ramp-capacity-0 = 
ramp-capacity-0-foreground = ${colors.alert}
ramp-capacity-1 = 
ramp-capacity-1-foreground = ${colors.alert}
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${colors.warning}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-foreground = ${colors.info-alt}
animation-charging-framerate = 750

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 85

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.alert}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-3 = 
ramp-4 = 
ramp-0-foreground = ${colors.foreground-alt}
ramp-1-foreground = ${colors.foreground-alt}
ramp-2-foreground = ${colors.warning}
ramp-3-foreground = ${colors.warning}
ramp-4-foreground = ${colors.alert}

[module/pkg]
type = custom/script
;tail = true
interval = 1200
format = <label>
;format-overline = #ff5c57
label = "%output:0:30%"
exec = ~/.config/polybar/pkg.sh
exec-if = "ping -q -w 2 -c 1 176.34.135.167 > /dev/null"

