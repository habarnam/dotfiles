set editor=`echo \$EDITOR`

source "gpg -dq $HOME/.local/share/neomutt/.pass.gpg |"

set imap_user = marius.orcsik@rocket-internet.de
set imap_pass = $my_rocket_imap_pass

set folder=imaps://marius.orcsik%40rocket-internet.de@imap.gmail.com/

set spoolfile = +INBOX
set postponed = +Drafts
set record = +Sent
set imap_check_subscribed

set sort = threads
set sort_aux = reverse-last-date-received
set strict_threads = yes
unset collapse_unread
bind index - collapse-thread
bind index + collapse-all

set header_cache = ~/.cache/neomutt
# Specify where to save and/or look for postponed messages.
set postponed = +[Gmail]/Drafts

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive

# # Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# # How often to check for new mail (time in seconds).
set mail_check = 120

set pgp_auto_decode = yes
set pgp_use_gpg_agent = yes
set crypt_use_gpgme = yes
set crypt_verify_sig = yes
set crypt_replysign = yes
set crypt_replyencrypt = yes
set crypt_replysignencrypted = yes

bind pager j next-line
bind pager k previous-line
bind attach,index,pager \CD next-page
bind attach,index,pager \CU previous-page
bind pager g top
bind pager G bottom
bind attach,index g first-entry
bind attach,index G last-entry
